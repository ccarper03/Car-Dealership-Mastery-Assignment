@model GuildCars.UI.Models.Reports.SalesReportViewModel
@{
    ViewBag.Title = "Sales";
}

<div class="container">
    <h2>Sales Report</h2>
    <div class="row">
        <form class="form-inline guildCarsForm" role="form">
            <div class="form-group">
                <div class="col-md-3">
                    <label>Filters</label>
                    <label style="display:inline" id="salesSearchTermLabel">Users</label>
                    @Html.DropDownList("salesSearchTermInput", Model.Users, "-All-", new { @id = "salesSearchTermInput", @style = "width: 200px; height: 30px; margin: 0px 0px 20px 17px;" })
                </div>
            </div>
            <label for="minYearSelectBox">From Date</label>
            <div class="form-group">
                <div class="col-md-1">
                    <select class="form-control" id="minYearSelectBox">
                        <option value=null
                                selected="selected">
                            No Min
                        </option>
                        <option value=2000>2000</option>
                        <option value=2001>2001</option>
                        <option value=2002>2002</option>
                        <option value=2003>2003</option>
                        <option value=2004>2004</option>
                        <option value=2005>2005</option>
                        <option value=2006>2006</option>
                        <option value=2007>2007</option>
                        <option value=2008>2008</option>
                        <option value=2009>2009</option>
                        <option value=2010>2010</option>
                        <option value=2011>2011</option>
                        <option value=2012>2012</option>
                        <option value=2013>2013</option>
                        <option value=2014>2014</option>
                        <option value=2015>2015</option>
                        <option value=2016>2016</option>
                        <option value=2017>2017</option>
                        <option value=2018>2018</option>
                    </select>
                </div>
            </div>
            <label for="minYearSelectBox">To Date</label>
            <div class="form-group">
                <div class="col-md-1">
                    <select class="form-control" id="maxYearSelectBox">
                        <option value=null
                                selected="selected">
                            No Max
                        </option>
                        <option value=2000>2000</option>
                        <option value=2001>2001</option>
                        <option value=2002>2002</option>
                        <option value=2003>2003</option>
                        <option value=2004>2004</option>
                        <option value=2005>2005</option>
                        <option value=2006>2006</option>
                        <option value=2007>2007</option>
                        <option value=2008>2008</option>
                        <option value=2009>2009</option>
                        <option value=2010>2010</option>
                        <option value=2011>2011</option>
                        <option value=2012>2012</option>
                        <option value=2013>2013</option>
                        <option value=2014>2014</option>
                        <option value=2015>2015</option>
                        <option value=2016>2016</option>
                        <option value=2017>2017</option>
                        <option value=2018>2018</option>
                    </select>
                </div>
            </div>
            <div class="form-actions" id="salesSearchSubmitButtonDiv">
                <button type="button" style="margin-left:20px; width:400px" id="searchSalesButton" class="btn btn-default pull-left" onclick="searchSales()">Search</button>
            </div>
        </form>
    </div>
    @*End Vehicle Search Form*@

    @*Ajax Error Messages*@
    <ul class="list-group" id="errorMessages"></ul>
    @if (TempData["Success"] != null)
            {
        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
    }
    @*Search Results Table*@
    <div class="row" id="salesSearchResultsDiv">
        <div class="col-md-12">
            <table id="salesSeachResultsTable" class="table table-striped table-responsive">
                <tr>
                    <th>User</th>
                    <th>Total Sales</th>
                    <th>Total Vehicles</th>
                </tr>
                <tbody id="salesSearchRows">
                    
                </tbody>
            </table>
        </div>
    </div>
</div>
